#include <lpc214x.h>

unsigned char lat_msg[] = "\nLatitude= ";
unsigned char long_msg[] = "\nLongitude= ";
unsigned char rcv_byte, count;
unsigned char rcv_array[30];

void UART0Init(void)
{
    PINSEL0 |= 0x00000005;
    U0FCR = 0x07;
    U0LCR = 0x83;
    U0DLL = 0x62;
    U0DLM = 0x00;
    U0LCR = 0x03;
}

void UART1Init(void)
{
    PINSEL0 |= 0x00050000;
    U1FCR = 0x07;
    U1LCR = 0x83;
    U1DLL = 0x62;
    U1DLM = 0x00;
    U1LCR = 0x03;
}

unsigned char UART1_PutChar(unsigned char ch)
{
    if (ch == '\n')
    {
        while (!(U1LSR & 0x20));
        U1THR = 0x0D;
    }
    while (!(U1LSR & 0x20));
    return (U1THR = ch);
}

unsigned char UART1_GetChar(void)
{
    while (!(U1LSR & 0x01));
    return (U1RBR);
}

unsigned char UART0_PutChar(unsigned char ch)
{
    if (ch == '\n')
    {
        while (!(U0LSR & 0x20));
        U0THR = 0x0D;
    }
    while (!(U0LSR & 0x20));
    return (U0THR = ch);
}

void UART0_Puts(unsigned char *str)
{
    while (*str)
    {
        UART0_PutChar(*str++);
    }
}

int main(void)
{
    UART0Init();
    UART1Init();

    while (1)
    {
        while (rcv_byte != '$')
        {
            rcv_byte = UART1_GetChar();
        }

        rcv_byte = UART1_GetChar();
        rcv_byte = UART1_GetChar();
        rcv_byte = UART1_GetChar();

        if (rcv_byte == 'R')
        {
            for (count = 0; count < 15; count++)
            {
                rcv_byte = UART1_GetChar();
            }

            rcv_byte = UART1_GetChar();

            if (rcv_byte == 'V')
            {
                UART0_Puts("\nInvalid GPS string\n");
            }
            else
            {
                for (count = 0; count < 24; count++)
                {
                    rcv_byte = UART1_GetChar();
                    rcv_array[count] = rcv_byte;
                }

                UART0_Puts(lat_msg);
                for (count = 0; count < 11; count++)
                {
                    UART0_PutChar(rcv_array[count]);
                }

                UART0_Puts(long_msg);
                for (count = 12; count < 24; count++)
                {
                    UART0_PutChar(rcv_array[count]);
                }
            }
        }
    }
}



