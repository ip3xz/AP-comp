1. Transmit and Receive Single Character:
#include <LPC214x.h>

void uart_init() {
    PINSEL0 = 0X00000005;
    U0FCR = 0X07;
    U0LCR = 0X83;
    U0DLL = 0X62;
    U0DLM = 0X00;
    U0LCR = 0X03;
}

int main() {
    unsigned char rev_data;
    uart_init();

    while (!(U0LSR & 0X01));
    rev_data = U0RBR;

    while (U0LSR == 0X20);
    U0THR = rev_data;

    return 0;
}
---------------------------------------------------
2. Transmit and Receive String:
#include <lpc214x.h>

void intia_UART() {
    PINSEL0 |= 0x05;
    U0FCR = 0x07;
    U0LCR = 0x83;
    U0DLL = 0x62;
    U0DLM = 0;
    U0LCR = 0X03;
}

int main() {
    unsigned char rev_data = 0;
    intia_UART();

    while (1) {
        while (!(U0LSR & 0x01));
        rev_data = U0RBR;

        while (!(U0LSR & 0x20));
        U0THR = rev_data;
    }

    return 0;
}

